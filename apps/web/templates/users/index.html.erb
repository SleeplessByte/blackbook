<h1>Users</h1>

<% if users.any? %>
  <table>
    <thead>
      <tr>
        <th>#</th>
        <th>username</th>
        <th>email</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.username %></td>
          <td><%= user.email %></td>
          <td><%= link_to 'show', routes.user_path( id: user.id ) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
<p>There are no users.</p>
<% end %>